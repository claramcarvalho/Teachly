<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/mediumGray">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fulaninho"
        android:textSize="22dp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:id="@+id/nameTeacherViewTeacher"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textSize="18dp"
                android:fontFamily="@font/montserrat_alternates_semi_bold"
                android:id="@+id/emailTeacherViewTeacher"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="18dp"
                android:fontFamily="@font/montserrat_alternates_semi_bold"
                android:id="@+id/phoneTeacherViewTeacher"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/talkToNewTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons_chat_30"
            android:layout_alignParentEnd="true">
        </ImageView>
    </RelativeLayout>


</LinearLayout>
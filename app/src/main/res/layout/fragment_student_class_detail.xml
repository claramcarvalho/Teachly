<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentStudentClassDetail"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:fontFamily="@font/montserrat_alternates_semi_bold"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/class_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description..."
        android:fontFamily="@font/montserrat_alternates_semi_bold"
        android:layout_marginVertical="5dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/class_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_alternates_semi_bold"
        android:background="@color/veryDarkGreen"
        android:text="French"
        android:textColor="@color/white"
        android:paddingHorizontal="8dp"
        android:paddingVertical="3dp"
        android:layout_marginTop="10dp"
        android:textSize="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_marginBottom="20dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_user"
            android:layout_gravity="center"
            android:contentDescription="@string/user_picture"/>
        <TextView
            android:id="@+id/studentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tutor Name"
            android:textSize="20dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:layout_marginStart="20dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tutorEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="student@gmail.com"
        android:textSize="15dp"
        android:fontFamily="@font/montserrat_regular"
        android:drawableStart="@drawable/icon_mail_30"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"/>
    <TextView
        android:id="@+id/tutorPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="(438) 9999-8877"
        android:textSize="15dp"
        android:fontFamily="@font/montserrat_regular"
        android:drawableStart="@drawable/icon_phone_30"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"/>
    <TextView
        android:id="@+id/btnTeacherTalkToStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:drawablePadding="10dp"
        android:layout_gravity="center"
        android:text="Talk to this tutor"
        android:gravity="center_vertical"
        android:textSize="15dp"
        app:drawableStartCompat="@drawable/icons_chat_30" />

    <TextView
        android:id="@+id/btnTeacherRemoveStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/icon_cross_mark_30"
        android:text="Drop from class"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_marginTop="60dp"
        android:drawablePadding="10dp"
        android:layout_marginBottom="30dp"
        />

</LinearLayout>
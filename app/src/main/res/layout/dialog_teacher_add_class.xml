<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/mediumGray">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new class"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat_alternates_semi_bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginTop="30dp"
        app:boxStrokeColor="@color/veryDarkGreen"
        app:hintTextColor="@color/gray"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtClassNameAddNewClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            app:boxStrokeColor="@color/gray"
            android:fontFamily="@font/montserrat_alternates_semi_bold"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description..."
        android:layout_marginTop="20dp"
        app:boxStrokeColor="@color/veryDarkGreen"
        app:hintTextColor="@color/gray"
        >
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edtDescriptionAddNewClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="5"
        android:gravity="start"
        app:boxStrokeColor="@color/gray"
        android:fontFamily="@font/montserrat_alternates_semi_bold"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a category"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_alternates_semi_bold"/>

    <Spinner
        android:id="@+id/spinnerTeacherClassCategory"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick a color for this class"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_alternates_semi_bold"/>

    <RadioGroup
        android:id="@+id/radioGroupColorAddNewClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <RadioButton
            android:id="@+id/colorRed"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:background="@color/red"
            android:scaleY="1.5"
            android:scaleX="1.5"
            android:layout_marginEnd="20dp"
            android:checked="true"
            android:text="#E55C5C"/>

        <RadioButton
            android:id="@+id/colorOrange"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:background="@color/orange"
            android:scaleY="1.5"
            android:scaleX="1.5"
            android:layout_marginEnd="20dp"
            android:text="#E59A5C"/>

        <RadioButton
            android:id="@+id/colorYellow"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:background="@color/yellow"
            android:scaleY="1.5"
            android:scaleX="1.5"
            android:layout_marginEnd="20dp"
            android:text="#E5E15C"
            />

        <RadioButton
            android:id="@+id/colorGreen"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:background="@color/pastelGreen"
            android:scaleY="1.5"
            android:scaleX="1.5"
            android:layout_marginEnd="20dp"
            android:text="#6BE55C"
            />

        <RadioButton
            android:id="@+id/colorBlue"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:background="@color/blue"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:text="#5CA0E5"
            />

        <RadioButton
            android:id="@+id/colorViolet"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:background="@color/violet"
            android:scaleY="1.5"
            android:scaleX="1.5"
            android:text="#A05CE5"
            />

    </RadioGroup>

    <TextView
        android:id="@+id/btnSaveNewClassTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:drawablePadding="10dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="Save Class"
        android:textSize="20dp"
        app:drawableStartCompat="@drawable/icon_check_30" />
</LinearLayout>

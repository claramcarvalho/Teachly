<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/mediumGray">

    <TextView
        android:id="@+id/textNameActivityStudentModal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of Activity"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat_alternates_extra_bold"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/activity_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:background="@color/veryDarkGreen"
        android:text="Homework"
        android:textColor="@color/white"
        android:paddingHorizontal="8dp"
        android:paddingVertical="3dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textActivityDescriptionStudentModal"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla quam velit, vulputate eu pharetra nec, mattis ac neque. Duis vulputate commodo lectus."
        android:layout_marginVertical="15dp"
        android:textSize="18dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginVertical="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_calendar_30"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25/08/2024"
            android:textSize="18dp"
            android:layout_marginStart="15dp"
            android:id="@+id/textDateActivityStudentModal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginVertical="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_clock_30"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:00"
            android:textSize="18dp"
            android:layout_marginStart="15dp"
            android:id="@+id/textHourActivityStudentModal"/>
    </LinearLayout>

</LinearLayout>